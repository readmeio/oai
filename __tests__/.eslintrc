{
  "extends": "@readme/eslint-config/testing",
  "rules": {
    "jest/expect-expect": [
      "warn",
      {
        "assertFunctionNames": [
          "expect",

          // This rule doesn't recognize sinon so we need to give it assistance.
          // https://github.com/jest-community/eslint-plugin-jest/issues/471
          "sinon.assert.calledWithMatch"
        ]
      }
    ]
  }
}
